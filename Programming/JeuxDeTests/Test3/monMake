.SILENT:

GPP = g++ -Wall -m64 -D DEBUG 
C11FLAGS = -std=c++11 
DSTDIR = ./programme
CLASSE = ./classes


PROGRAMS = Program
all: $(PROGRAMS)

Program: Couleur Point Figure Ecran Test3 
	echo "[+] Creation de Program"
	$(GPP) $(C11FLAGS) -o $(DSTDIR)/Test3 Couleur.o Point.o Figure.o Ecran.o Test3.o 

Couleur: $(CLASSE)/Couleur.cpp  
	echo "[+] Creation de Couleur.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Couleur.cpp -c

Point: $(CLASSE)/Point.cpp  
	echo "[+] Creation de Point.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Point.cpp -c

Figure: $(CLASSE)/Figure.cpp
	echo "[+] Creation de Figure.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Figure.cpp -c 

Test3: $(CLASSE)/Test3.cpp
	echo "[+] Creation de Test2.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Test3.cpp -c

Ecran: $(CLASSE)/Ecran.cpp
	echo "[+] Creation de Ecran.o"
	$(GPP) $(C11FLAGS) -D SUN $(CLASSE)/Ecran.cpp -c
