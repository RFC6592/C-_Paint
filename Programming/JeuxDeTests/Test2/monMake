.SILENT:

GPP = g++ -Wall -m64 
C11FLAGS = -std=c++11 
DSTDIR = ./programme
CLASSE = ./classes
OBJ = ./objets

PROGRAMS = Program 
all: $(PROGRAMS)

Program: Couleur Point Figure Ecran Test2
	echo "[+] Creation de Program"
	$(GPP) $(C11FLAGS) -o $(DSTDIR)/Test2 $(OBJ)/Couleur.o $(OBJ)/Point.o $(OBJ)/Figure.o $(OBJ)/Ecran.o $(OBJ)/Test2.o 

Couleur: $(CLASSE)/Couleur.cpp  
	echo "[+] Creation de Couleur.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Couleur.cpp -c -o $(OBJ)/Couleur.o
	
Point: $(CLASSE)/Point.cpp  
	echo "[+] Creation de Point.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Point.cpp -c -o $(OBJ)/Point.o

Figure: $(CLASSE)/Figure.cpp
	echo "[+] Creation de Figure.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Figure.cpp -c -o $(OBJ)/Figure.o

Test2: $(CLASSE)/Test2.cpp
	echo "[+] Creation de Test2.o"
	$(GPP) $(C11FLAGS) $(CLASSE)/Test2.cpp -c -o $(OBJ)/Test2.o

Ecran: $(CLASSE)/Ecran.cpp
	echo "[+] Creation de Ecran.o"
	$(GPP) $(C11FLAGS) -D SUN $(CLASSE)/Ecran.cpp -c -o $(OBJ)/Ecran.o
